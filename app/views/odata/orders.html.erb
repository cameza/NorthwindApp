<div class="col-md-5 col-xs-12 ">
  <div class="container">
  	<h1>List Orders</h1>
  	<%= bootstrap_form_tag :action => 'orders' do |f| %>
		<%= f.search_field :productID, hide_label: true, placeholder: 'Type the Product ID' %>
		<%= f.submit "Search" %>
		<div class="jumbotron">
			<h2><%= result = "Product Summary:" if @received %></h2>
			<p><%= result = "Product ID = #{@output['productID']}" if @received %></p>
			<p><%= result = "The number of orders for product ID #{@output['productID']} is #{@output['count']}" if @received %></p>
			<table class="table table-hover">
				<tr>
					<th><%= result = "Order ID" if @received %></th>
					<th><%= result = "Total" if @received %></th>
				</tr>
				<% @output["order"].each do |orderid,total|
					idCell = orderid
					totalCell = total %>
				<tr>
					<td><%= idCell %></td>	
					<td><%= totalCell %></td>
				</tr>
				<% end %>
			</table>
		</div>
  	<% end %>
  </div>
</div>